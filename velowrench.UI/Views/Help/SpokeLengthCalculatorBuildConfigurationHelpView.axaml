<UserControl x:Class="velowrench.UI.Views.Help.SpokeLengthCalculatorBuildConfigurationHelpView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:res="clr-namespace:velowrench.UI.Resources"
             xmlns:vm="using:velowrench.Core.ViewModels"
             x:DataType="vm:Help.SpokeLengthCalculatorBuildConfigurationHelpViewModel"
             Design.Height="840"
             Design.Width="360">

    <Grid Margin="20,10"
          ColumnDefinitions="*" RowDefinitions="Auto, Auto,Auto, Auto">

        <TextBlock Grid.Row="0"
                   FontSize="20" FontWeight="Light" Text="{x:Static res:Languages.NumberOfSpokesTitle}" TextWrapping="Wrap" />
        <TextBlock Grid.Row="1" Grid.Column="1"
                   Margin="0,5,0,0"
                   Text="{x:Static res:Languages.NumberOfSpokesDescription}" TextWrapping="Wrap" />

        <TextBlock Grid.Row="2"
                   Margin="0,15,0,0"
                   FontSize="20" FontWeight="Light" Text="{x:Static res:Languages.LacingPatterns}" TextWrapping="Wrap" />
        <TextBlock Grid.Row="3" Grid.Column="1"
                   Margin="0,5,0,0"
                   Text="{x:Static res:Languages.LacingPatternsDescription}" TextWrapping="Wrap" />
    </Grid>

</UserControl>
