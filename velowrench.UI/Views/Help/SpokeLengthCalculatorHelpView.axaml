<UserControl x:Class="velowrench.UI.Views.Help.SpokeLengthCalculatorHelpView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:math="clr-namespace:AvaloniaMath.Controls;assembly=AvaloniaMath"
             xmlns:res="clr-namespace:velowrench.UI.Resources"
             xmlns:vm="using:velowrench.Core.ViewModels"
             x:DataType="vm:Help.SpokeLengthCalculatorHelpViewModel"
             Design.Height="840"
             Design.Width="360">


    <UserControl.Styles>
        <Style Selector="TextBlock.Header2">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Padding" Value="0,10,0,3" />

        </Style>

        <Style Selector="TextBlock.Content">
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style Selector="Border.Group">
            <Setter Property="Background" Value="{DynamicResource SemiColorTertiaryLight}" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="CornerRadius" Value="7" />
        </Style>

        <Style Selector="TextBlock.GroupHeader">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource SemiColorTertiary}" />
            <Setter Property="Margin" Value="16,16,16,8" />
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto, Auto, Auto ,Auto, Auto, Auto">

        <!--  Inputs  -->
        <TextBlock Grid.Row="0"
                   Classes="GroupHeader"
                   Text="{x:Static res:Languages.Inputs}" />

        <Border Grid.Row="1" Classes="Group">
            <StackPanel>
                <!--  Hub measurements  -->
                <TextBlock Classes="Header2" Text="{x:Static res:Languages.HubMeasurements}" />
                <Button Grid.Row="0" Grid.Column="0"
                        Margin="0,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                        Classes="Secondary"
                        Command="{Binding ShowHubMeasurementsHelpPageCommand}"
                        Theme="{DynamicResource LigthButton}">
                    <StackPanel Orientation="Horizontal">

                        <materialIcons:MaterialIcon Width="25" Height="25"
                                                    HorizontalAlignment="Center"
                                                    Kind="InfoOutline" />
                        <TextBlock Margin="10,0" VerticalAlignment="Center"
                                   Text="{x:Static res:Languages.HelpPage}" />
                    </StackPanel>
                </Button>

                <StackPanel Orientation="Horizontal">
                    <math:FormulaBlock Margin="0,15,0,5" HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Formula="{}{w_L}, {}{w_R}" Scale="18" />
                    <TextBlock Margin="5,10,0,0" VerticalAlignment="Center"
                               Classes="Content" Text="{x:Static res:Languages.CenterToFlangeDistances}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <math:FormulaBlock Margin="0,10,0,5" HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Formula="{}{D_L}, {}{D_R}" Scale="18" />
                    <TextBlock Margin="5,5,0,0" VerticalAlignment="Center"
                               Classes="Content" Text="{x:Static res:Languages.HubDiameters}" />
                </StackPanel>

                <!--  Rim measurements  -->
                <TextBlock Margin="0,10,0,0"
                           Classes="Header2" Text="{x:Static res:Languages.RimMeasurements}" />
                <Button Grid.Row="0" Grid.Column="0"
                        Margin="0,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                        Classes="Secondary"
                        Command="{Binding ShowRimMeasurementsHelpPageCommand}"
                        Theme="{DynamicResource LigthButton}">
                    <StackPanel Orientation="Horizontal">

                        <materialIcons:MaterialIcon Width="25" Height="25"
                                                    HorizontalAlignment="Center"
                                                    Kind="InfoOutline" />
                        <TextBlock Margin="10,0" VerticalAlignment="Center"
                                   Text="{x:Static res:Languages.HelpPage}" />
                    </StackPanel>
                </Button>

                <StackPanel Orientation="Horizontal">
                    <math:FormulaBlock Margin="0,10,0,5" HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Formula="ERD" Scale="18" />
                    <TextBlock Margin="5,5,0,0" VerticalAlignment="Center"
                               Classes="Content" Text="{x:Static res:Languages.EffectiveRimDiameter}" />
                </StackPanel>

                <!--  Build configuration  -->
                <TextBlock Margin="0,10,0,0"
                           Classes="Header2" Text="{x:Static res:Languages.BuildConfiguration}" />
                <Button Grid.Row="0" Grid.Column="0"
                        Margin="0,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                        Classes="Secondary"
                        Command="{Binding ShowBuildConfigurationHelpPageCommand}"
                        Theme="{DynamicResource LigthButton}">
                    <StackPanel Orientation="Horizontal">

                        <materialIcons:MaterialIcon Width="25" Height="25"
                                                    HorizontalAlignment="Center"
                                                    Kind="InfoOutline" />
                        <TextBlock Margin="10,0" VerticalAlignment="Center"
                                   Text="{x:Static res:Languages.HelpPage}" />
                    </StackPanel>
                </Button>

                <StackPanel Orientation="Horizontal">
                    <math:FormulaBlock Margin="0,10,0,5" HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Formula="S" Scale="18" />
                    <TextBlock Margin="5,5,0,0" VerticalAlignment="Center"
                               Classes="Content" Text="{x:Static res:Languages.NumberOfSpokes}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <math:FormulaBlock Margin="0,10,0,5" HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Formula="X" Scale="18" />
                    <TextBlock Margin="5,5,0,0" VerticalAlignment="Center"
                               Classes="Content" Text="{x:Static res:Languages.CrossCount}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <math:FormulaBlock Margin="0,10,0,5" HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Formula="d" Scale="18" />
                    <TextBlock Margin="5,5,0,0" VerticalAlignment="Center"
                               Classes="Content" Text="{x:Static res:Languages.HubSpokeHoleDiameter}" />
                </StackPanel>

            </StackPanel>
        </Border>

        <!--  Calculator  -->
        <TextBlock Grid.Row="2"
                   Classes="GroupHeader"
                   Text="{x:Static res:Languages.Calculations}" />

        <Border Grid.Row="3" Classes="Group">
            <StackPanel>
                <TextBlock Classes="Content" Text="{x:Static res:Languages.SpokeLengthCalculationDescription}" />

                <!--  Definitions  -->
                <TextBlock Margin="0,10,0,0"
                           Classes="Content" Text="{x:Static res:Languages.Definitions}" />
                <math:FormulaBlock Margin="0,10,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Formula="{Binding DefinitionLaTeX}"
                                   Scale="16" />

                <!--  Baseline chord C  -->
                <TextBlock Margin="0,5,0,0"
                           Classes="Content" Text="{x:Static res:Languages.BaselineChordCalculation}" />
                <math:FormulaBlock Margin="0,10,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Formula="{Binding BaselineChordCLaTeX}"
                                   Scale="20" />

                <!--  Left spoke length  -->
                <TextBlock Margin="0,5,0,0"
                           Classes="Content" Text="{x:Static res:Languages.LeftSpokeLength}" />
                <math:FormulaBlock Margin="0,10,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Formula="{Binding SpokeLengthLeftLaTeX}"
                                   Scale="20" />

                <!--  Right spoke length  -->
                <TextBlock Margin="0,5,0,0"
                           Classes="Content" Text="{x:Static res:Languages.RightSpokeLength}" />
                <math:FormulaBlock Margin="0,10,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Formula="{Binding SpokeLengthRightLaTeX}"
                                   Scale="20" />

                <TextBlock Margin="0,5,0,0"
                           Classes="Content" Text="{x:Static res:Languages.SpokeHoleRadiusNote}" />

            </StackPanel>

        </Border>

        <!--  Results  -->
        <TextBlock Grid.Row="4"
                   Classes="GroupHeader"
                   Text="{x:Static res:Languages.Results}" />
        <Border Grid.Row="5" Classes="Group">
            <StackPanel>
                <TextBlock Classes="Content" Text="{x:Static res:Languages.SpokeLengthResultsDescription}" />
            </StackPanel>
        </Border>

    </Grid>

</UserControl>
