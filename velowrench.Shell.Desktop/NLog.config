<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs\internal-nlog.txt">

  <!-- Enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Extensions.Logging"/>
  </extensions>

  <!-- Define targets -->
  <targets>
    <!-- File target for all logs -->
    <target xsi:type="File" 
            name="allfile" 
            fileName="logs\velowrench-${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=toString}" />

    <!-- File target for calculations -->
    <target xsi:type="File" 
            name="calculationsfile" 
            fileName="logs\calculations-${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=toString}" />

    <!-- Console target for development -->
    <target xsi:type="Console" 
            name="console" 
            layout="${time} [${uppercase:${level}}] ${logger:shortName=true} ${message} ${exception:format=toString}" />

    <!-- Debug target for Visual Studio output -->
    <target xsi:type="Debugger" 
            name="debugger" 
            layout="${time} [${uppercase:${level}}] ${logger:shortName=true} ${message}" />
  </targets>

  <!-- Define rules -->
  <rules>
    <!-- All logs to file -->
    <logger name="*" minlevel="Info" writeTo="allfile" />
    
    <!-- Calculation-specific logs to separate file -->
    <logger name="velowrench.Calculations.*" minlevel="Debug" writeTo="calculationsfile" />
    
    <!-- Console output in Debug mode -->
    <logger name="*" minlevel="Debug" writeTo="console" enabled="true" />
    
    <!-- Debug output in Visual Studio -->
    <logger name="*" minlevel="Debug" writeTo="debugger" enabled="true" />
    
    <!-- Skip Microsoft logs and so on -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
  </rules>
</nlog>