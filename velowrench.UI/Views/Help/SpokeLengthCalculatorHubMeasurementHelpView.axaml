<UserControl x:Class="velowrench.UI.Views.Help.SpokeLengthCalculatorHubMeasurementHelpView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:res="clr-namespace:velowrench.UI.Resources"
             xmlns:skia="using:Svg.Skia.Avalonia"
             xmlns:svg="using:Svg.Controls.Skia.Avalonia"
             xmlns:vm="using:velowrench.Core.ViewModels"
             x:DataType="vm:Help.SpokeLengthCalculatorHubMeasurementHelpViewModel"
             Design.Height="840"
             Design.Width="360">

    <StackPanel Margin="20,10" Orientation="Vertical">

        <TextBlock Text="{x:Static res:Languages.HubAsymmetryNote}" TextWrapping="Wrap" />
        <TextBlock Margin="0,0,0,15"
                   Text="{x:Static res:Languages.FrontHubDiscBrakeNote}" TextWrapping="Wrap" />

        <Grid ColumnDefinitions="*" RowDefinitions="Auto, Auto,Auto, Auto,Auto, Auto">

            <TextBlock Grid.Row="0"
                       FontSize="20" FontWeight="Light" Text="{x:Static res:Languages.CenterToFlange}" TextWrapping="Wrap" />

            <Svg x:Name="HubDiagramSideView"
                 Grid.Row="1" Grid.Column="0"
                 Margin="0,15,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                 Path="avares://velowrench.UI/Assets/front_hub_measurements_sideview.svg" Stretch="Uniform" />

            <TextBlock Grid.Row="2" Grid.Column="1"
                       Margin="0,15,0,0"
                       FontWeight="Bold" Text="{x:Static res:Languages.CenterToFlangeNonGearSide}" TextWrapping="Wrap" />
            <TextBlock Grid.Row="3" Grid.Column="1"
                       Text="{x:Static res:Languages.CenterToFlangeNonGearSideDescription}" TextWrapping="Wrap" />

            <TextBlock Grid.Row="4" Grid.Column="1"
                       Margin="0,10,0,0"
                       FontWeight="Bold" Text="{x:Static res:Languages.CenterToFlangeGearSide}" TextWrapping="Wrap" />
            <TextBlock Grid.Row="5" Grid.Column="1"
                       Text="{x:Static res:Languages.CenterToFlangeGearSideDescription}" TextWrapping="Wrap" />
        </Grid>

        <Grid Margin="0,15,0,0"
              ColumnDefinitions="*" RowDefinitions="Auto, Auto,Auto, Auto,Auto, Auto, Auto, Auto">

            <TextBlock Grid.Row="0"
                       FontSize="20" FontWeight="Light" Text="{x:Static res:Languages.HubDiameter}" TextWrapping="Wrap" />

            <Svg x:Name="HubDiagramFrontView"
                 Grid.Row="1" Grid.Column="0"
                 Margin="20,15,10,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                 Path="avares://velowrench.UI/Assets/front_hub_measurements_frontview.svg" Stretch="Uniform" />

            <TextBlock Grid.Row="2" Grid.Column="1"
                       Margin="0,15,0,0"
                       FontWeight="Bold" Text="{x:Static res:Languages.HubDiameterNonGearSide}" TextWrapping="Wrap" />
            <TextBlock Grid.Row="3" Grid.Column="1"
                       Text="{x:Static res:Languages.HubDiameterNonGearSideDescription}" TextWrapping="Wrap" />

            <TextBlock Grid.Row="4" Grid.Column="1"
                       Margin="0,10,0,0"
                       FontWeight="Bold" Text="{x:Static res:Languages.HubDiameterGearSide}" TextWrapping="Wrap" />
            <TextBlock Grid.Row="5" Grid.Column="1"
                       Text="{x:Static res:Languages.HubDiameterGearSideDescription}" TextWrapping="Wrap" />

        </Grid>

    </StackPanel>

</UserControl>
