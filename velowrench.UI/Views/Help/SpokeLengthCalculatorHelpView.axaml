<UserControl x:Class="velowrench.UI.Views.Help.SpokeLengthCalculatorHelpView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:velowrench.UI.Controls"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:math="clr-namespace:AvaloniaMath.Controls;assembly=AvaloniaMath"
             xmlns:res="clr-namespace:velowrench.UI.Resources"
             xmlns:vm="using:velowrench.Core.ViewModels"
             x:DataType="vm:Help.SpokeLengthCalculatorHelpViewModel"
             Design.Height="840"
             Design.Width="360">

    <Grid RowDefinitions="Auto, Auto, Auto ,Auto, Auto, Auto">

        <!--  Inputs  -->
        <TextBlock Grid.Row="0"
                   Classes="GroupHeader"
                   Text="{x:Static res:Languages.Inputs}" />

        <Border Grid.Row="1" Classes="Group">
            <StackPanel>
                <!--  Hub measurements  -->
                <TextBlock Classes="Header2" Text="{x:Static res:Languages.HubMeasurements}" />
                <Button Grid.Row="0" Grid.Column="0"
                        Margin="0,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                        Classes="Secondary"
                        Command="{Binding ShowHubMeasurementsHelpPageCommand}"
                        Theme="{DynamicResource LigthButton}">
                    <StackPanel Orientation="Horizontal">

                        <materialIcons:MaterialIcon Width="25" Height="25"
                                                    HorizontalAlignment="Center"
                                                    Kind="InfoOutline" />
                        <TextBlock Margin="10,0" VerticalAlignment="Center"
                                   Text="{x:Static res:Languages.HelpPage}" />
                    </StackPanel>
                </Button>

                <StackPanel Orientation="Horizontal">
                    <controls:LaTeXBitmapControl Width="60" Height="25"
                                                 Margin="0,10,0,0"
                                                 Formula="{}{w_L}, {}{w_R}" />
                    <TextBlock Margin="5,10,0,0" VerticalAlignment="Center"
                               Classes="Content"
                               Text="{x:Static res:Languages.CenterToFlangeDistances}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <controls:LaTeXBitmapControl Width="60" Height="25"
                                                 Margin="0,5,0,0"
                                                 Formula="{}{D_L}, {}{D_R}" />
                    <TextBlock Margin="5,10,0,0" VerticalAlignment="Center"
                               Classes="Content"
                               Text="{x:Static res:Languages.HubDiameters}" />
                </StackPanel>

                <!--  Rim measurements  -->
                <TextBlock Margin="0,10,0,0"
                           Classes="Header2"
                           Text="{x:Static res:Languages.RimMeasurements}" />
                <Button Grid.Row="0" Grid.Column="0"
                        Margin="0,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                        Classes="Secondary"
                        Command="{Binding ShowRimMeasurementsHelpPageCommand}"
                        Theme="{DynamicResource LigthButton}">
                    <StackPanel Orientation="Horizontal">

                        <materialIcons:MaterialIcon Width="25" Height="25"
                                                    HorizontalAlignment="Center"
                                                    Kind="InfoOutline" />
                        <TextBlock Margin="10,0" VerticalAlignment="Center"
                                   Text="{x:Static res:Languages.HelpPage}" />
                    </StackPanel>
                </Button>

                <StackPanel Orientation="Horizontal">
                    <controls:LaTeXBitmapControl Width="50" Height="20"
                                                 Margin="0,15,0,0"
                                                 Formula="ERD" />
                    <TextBlock Margin="5,10,0,0" VerticalAlignment="Center"
                               Classes="Content"
                               Text="{x:Static res:Languages.EffectiveRimDiameter}" />
                </StackPanel>

                <!--  Build configuration  -->
                <TextBlock Margin="0,10,0,0"
                           Classes="Header2"
                           Text="{x:Static res:Languages.BuildConfiguration}" />
                <Button Grid.Row="0" Grid.Column="0"
                        Margin="0,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                        Classes="Secondary"
                        Command="{Binding ShowBuildConfigurationHelpPageCommand}"
                        Theme="{DynamicResource LigthButton}">
                    <StackPanel Orientation="Horizontal">

                        <materialIcons:MaterialIcon Width="25" Height="25"
                                                    HorizontalAlignment="Center"
                                                    Kind="InfoOutline" />
                        <TextBlock Margin="10,0" VerticalAlignment="Center"
                                   Text="{x:Static res:Languages.HelpPage}" />
                    </StackPanel>
                </Button>

                <StackPanel Orientation="Horizontal">
                    <controls:LaTeXBitmapControl Width="15" Height="15"
                                                 Margin="0,10,0,0"
                                                 Formula="S" />
                    <TextBlock Margin="5,10,0,0" VerticalAlignment="Center"
                               Classes="Content"
                               Text="{x:Static res:Languages.NumberOfSpokes}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <controls:LaTeXBitmapControl Width="15" Height="15"
                                                 Margin="0,10,0,0"
                                                 Formula="X" />
                    <TextBlock Margin="5,5,0,0" VerticalAlignment="Center"
                               Classes="Content"
                               Text="{x:Static res:Languages.CrossCount}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <controls:LaTeXBitmapControl Width="15" Height="15"
                                                 Margin="0,5,0,0"
                                                 Formula="d" />
                    <TextBlock Margin="5,5,0,0" VerticalAlignment="Center"
                               Classes="Content"
                               Text="{x:Static res:Languages.HubSpokeHoleDiameter}" />
                </StackPanel>

            </StackPanel>
        </Border>

        <!--  Calculator  -->
        <TextBlock Grid.Row="2"
                   Classes="GroupHeader"
                   Text="{x:Static res:Languages.Calculations}" />

        <Border Grid.Row="3" Classes="Group">
            <StackPanel>
                <TextBlock Classes="Content" Text="{x:Static res:Languages.SpokeLengthCalculationDescription}" />

                <!--  Definitions  -->
                <TextBlock Margin="0,10,0,0"
                           Classes="Content"
                           Text="{x:Static res:Languages.Definitions}" />
                <controls:LaTeXBitmapControl Width="350" Height="70"
                                             Margin="0,10,0,5"
                                             Formula="{Binding DefinitionLaTeX}" />

                <!--  Baseline chord C  -->
                <TextBlock Margin="0,5,0,0"
                           Classes="Content"
                           Text="{x:Static res:Languages.BaselineChordCalculation}" />
                <controls:LaTeXBitmapControl Width="300" Height="50"
                                             Margin="0,10,0,5"
                                             Formula="{Binding BaselineChordCLaTeX}" />

                <!--  Left spoke length  -->
                <TextBlock Margin="0,5,0,0"
                           Classes="Content"
                           Text="{x:Static res:Languages.LeftSpokeLength}" />
                <controls:LaTeXBitmapControl Width="200" Height="60"
                                             Margin="0,10,0,5"
                                             Formula="{Binding SpokeLengthLeftLaTeX}" />

                <!--  Right spoke length  -->
                <TextBlock Margin="0,5,0,0"
                           Classes="Content"
                           Text="{x:Static res:Languages.RightSpokeLength}" />
                <controls:LaTeXBitmapControl Width="200" Height="60"
                                             Margin="0,10,0,5"
                                             Formula="{Binding SpokeLengthRightLaTeX}" />

                <TextBlock Margin="0,5,0,0"
                           Classes="Content"
                           Text="{x:Static res:Languages.SpokeHoleRadiusNote}" />

            </StackPanel>

        </Border>

        <!--  Results  -->
        <TextBlock Grid.Row="4"
                   Classes="GroupHeader"
                   Text="{x:Static res:Languages.Results}" />
        <Border Grid.Row="5" Classes="Group">
            <StackPanel>
                <TextBlock Classes="Content" Text="{x:Static res:Languages.SpokeLengthResultsDescription}" />
            </StackPanel>
        </Border>

    </Grid>

</UserControl>
