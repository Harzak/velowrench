<UserControl x:Class="velowrench.UI.Views.Controls.RoutableViewHeaderControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:app="clr-namespace:velowrench"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:rxui="http://reactiveui.net"
             xmlns:views="clr-namespace:velowrench.UI.Views"
             xmlns:vm="using:velowrench.Core.ViewModels"
             x:DataType="vm:Base.BaseRoutableViewModel">

    <Grid Margin="5,5"
          ColumnDefinitions="*" RowDefinitions="*">

        <TextBlock Grid.Row="0" Grid.Column="0"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="{Binding Name}" />

        <Button Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Command="{Binding NavigateBackCommand}"
                Theme="{DynamicResource BorderlessButton}">
            <materialIcons:MaterialIcon Width="25" Height="25"
                                        Foreground="Black" Kind="ArrowLeft" />
        </Button>
    </Grid>
</UserControl>
